<h1>Listing people</h1>

<table>
  <tr>
    <th>Role</th>
    <th>Gender</th>
    <th>Age</th>
    <th>Trail name</th>
    <th>Family</th>
    <th>Avatar</th>
    <th>Award</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @people.each do |person| %>
  <tr>
    <td><%= person.role_id %></td>
    <td><%= person.gender_id %></td>
    <td><%= person.age %></td>
    <td><%= person.trail_name %></td>
    <td><%= person.family_id %></td>
    <td><%= person.avatar_id %></td>
    <td><%= person.award_id %></td>
    <td><%= link_to 'Show', person %></td>
    <td><%= link_to 'Edit', edit_person_path(person) %></td>
    <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

